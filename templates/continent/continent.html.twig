{% extends 'base.html.twig' %}

{% block title %}
	Page du continent
	{{ continent.libelle }}
{% endblock %}

{% block monTitre %}
	Page du continent
	{{ continent.libelle }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 text-center">
			{% if continent.animaux|length > 1 %}
				<p>
					Voici les animaux vivant sur le continent
					{{ continent.libelle }}
				</p>
			{% else %}
				<p>
					Voici l'animal vivant sur le continent
					{{ continent.libelle }}
				</p>
			{% endif %}
		</div>
	</div>

	<div class="row">
		{% for animal in continent.animaux %}
			<div class="col-6">
				<div class="row align-items-center">
					<div class="col-12 col-md-6 col-lg-2 text-center">
						<img class="img-fluid" src="{{ asset('images/' ~ animal.image) }}" alt="">
					</div>
					<div class="col text-center">
						<h2>
							<a href="{{ path('afficher_animal', { 'id' : animal.id }) }}">
								{{ animal.nom }}
							</a>
						</h2>
						<p>
							{{ animal.description }}
						</p>
						<p>
							Famille :
							<a href="{{ path('afficher_famille', { 'id' : animal.famille.id }) }}" class="btn btn-primary">
								{{ animal.famille.libelle }}
							</a>
						</p>
						<div>
							<p>
								Cet animal vit aussi sur les continents suivants :
							</p>
							<ul class="list-group list-group-horizontal">
								{% for continent in animal.continents %}
									<li class="list-group-item list-group-item-info">
										<a href="{{ path('afficher_continent', { 'id' : continent.id }) }}">
											{{ continent.libelle|capitalize }}
										</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>

{% endblock %}
